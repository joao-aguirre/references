@Article{2020-pecs-peng,
  author   = {Zhengbiao Peng and Elham Doroodchi and Behdad Moghtaderi},
  journal  = {Progress in Energy and Combustion Science},
  title    = {Heat transfer modelling in Discrete Element Method (DEM)-based simulations of thermal processes: Theory and model development},
