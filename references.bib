@Article{2023-ate-cortes,
  author   = {Eduardo Cortés and David Gaviño and Ignacio Calderón-Vásquez and Jesús García and Danilo Estay and José M. Cardemil and Rodrigo Barraza},
  journal  = {Applied Thermal Engineering},
  title    = {An enhanced and optimized Monte Carlo method to calculate view factors in packed beds},
  year     = {2023},
  issn     = {1359-4311},
  pages    = {119391},
  volume   = {219},
  abstract = {Comprehensive radiation studies on packed beds require the
estimation of view factors between the surfaces, which often computationally
expensive. This paper proposes a novel method based on Monte Carlo Ray Tracing
for high-precision and low time computation processing of view factors in random
assemblies of cylindrical packed beds. The Monte Carlo Ray Tracing method is
improved by coupling it with Kowsary's tangent sphere method under the parallel
computation processing through Compute Unified Device Architecture, showing a
reduction of the computational time in approximately 153 times less than a
traditional Monte Carlo Ray Tracing method on the hardware used and obtaining a
maximum relative error of 0.39% for configurations evaluated in the literature.
Furthermore, a calculation methodology for view factors between
particle-particle, particle-wall, and particle-lid under an original layer
concept, is presented and applied on a set of randomly assembled monosized
packed beds generated with the LIGGGHTS software, covering an average porosity
range from 0.38 to 0.50 for the arrays. Finally, detailed analysis and
discussion of the results are performed, allowing to find characteristic view
factors for the particles according to their positions and correlations for view
factors particle-wall and particle-lid which is defined as layer view factor
method, considering error intervals for each interaction respectively, defining
a view factor calculation methodology for packed beds within the studied
porosity range.},
  doi      = {https://doi.org/10.1016/j.applthermaleng.2022.119391},
  keywords = {Radiation Heat Transfer, View factor, Packed Bed, MCRT, Thermal Storage},
  url      = {https://www.sciencedirect.com/science/article/pii/S1359431122013217},
}

@Article{2023-ichmt-liu,
  author    = {Baokun Liu and Junming Zhao and Linhua Liu and A. V. Gusarov},
  journal   = {International Communications in Heat and Mass Transfer},
  title     = {Analytical relation of radiation distribution function in random particulate systems},
  year      = {2023},
  issn      = {0735-1933},
  month     = feb,
  pages     = {106555},
  volume    = {141},
  abstract  = {Radiative heat transfer in particulate systems is important in various applications. Radiation distribution factor (RD) and its extension to continuum scale, radiation distribution function (RDF), are basic parameters to calculate radiative heat transfer in particulate media, which contain both the information of geometrical arrangement and radiative properties of particles. They can fully characterize radiative heat transfer characteristics in a particulate system. Yet the distribution law of RDF is still not well established. In this paper, the analytical relation of RDF in a randomly and uniformly distributed particulate system is extended to account for highly multiple scattering effects. A double average treatment is used to obtain the statistically averaged RD distribution. Radiative heat transfer simulations are carried out to verify the performance of the analytical RDF relation. The relative errors between the results based on analytical relation and discrete RD data are around 1%. Model parameters of the analytical RDF relation for a wide range of particle solid fractions and surface emissivities are obtained. This work deepens the understanding of RDF characteristics and the presented analytical relation provides a reference for industrial analysis of radiative heat transfer in dense particulate systems.},
  doi       = {10.1016/j.icheatmasstransfer.2022.106555},
  publisher = {Elsevier BV},
}

