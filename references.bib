@article{2024-jcp-janssen,
author = {T. J. A. Janssen and C. García Llamas and D. R. Rieder and J. A. M. Kuipers and M. W. Baltussen},
journal = {Journal of Computational Physics},
title = {A coupled Local Front Reconstruction and Immersed Boundary Method for simulating 3D multiphase flows with contact line dynamics in complex geometries},
